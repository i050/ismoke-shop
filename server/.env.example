# ====================================
# MongoDB Configuration
# ====================================
MONGO_URI=mongodb://127.0.0.1:27017/ecommerce
# For Railway: MONGO_URI=${{MongoDB.MONGO_URL}}

# ====================================
# Redis Configuration (BullMQ)
# ====================================
REDIS_URL=
# Alternative format:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=
# For Railway: REDIS_URL=${{Redis.REDIS_URL}}

# ====================================
# JWT & Authentication
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ====================================
# Server Configuration
# ====================================
PORT=5000
NODE_ENV=development
# For Railway: NODE_ENV=production

# ====================================
# Client/Frontend URL
# ====================================
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173
# For Railway: CLIENT_URL=${{client.RAILWAY_PUBLIC_DOMAIN}}
# For Railway: FRONTEND_URL=https://${{client.RAILWAY_PUBLIC_DOMAIN}}

# ====================================
# Cloudinary Configuration
# ====================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_WEBHOOK_SECRET=your-webhook-secret

# ====================================
# Email Configuration (SMTP)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
EMAIL_MOCK_MODE=false
# For development: EMAIL_MOCK_MODE=true

# ====================================
# Payment Configuration
# ====================================
PAYMENT_MOCK_MODE=true
MOCK_PAYMENT_FAILURE_RATE=0
MOCK_PAYMENT_DELAY_MS=500
# For production: PAYMENT_MOCK_MODE=false

# ====================================
# Store Configuration
# ====================================
STORE_NAME=E-commerce Store
SUPPORT_EMAIL=support@yourdomain.com

# ====================================
# Testing (Optional)
# ====================================
TEST_MONGO_URI=mongodb://127.0.0.1:27017/ecommerce-test
